<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <div class="<%= "col-#{defined?(link) ? 8 : 12}" %>">
    <h1 class="h2 mb-0"><%= page_title %></h1>
  </div>

  <% if defined?(link) %>
    <%= tag.div(link, class: "col-4 text-end") do %>
      <%= link_to(t(".create"), link, class: "btn btn-sm btn-outline-primary") %>
    <% end %>
  <% end %>
</div>
